<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B00BCD4"
    tools:context=".Show_profile_Activity">
    <Button
        android:id="@+id/bckbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/profileBackround"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        app:srcCompat="@drawable/background" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/profileBackround"/>




<LinearLayout
    android:id="@+id/linear1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/visit_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/main_stud"
        app:civ_border="true"
        app:civ_border_color="@color/colorAccent"/>
    <androidx.cardview.widget.CardView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/visit_profile_image"
        app:cardCornerRadius="20dp">
        <TextView
            android:id="@+id/visit_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="user name"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


</LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cc2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/playbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_play_circle_outline_black_24dp"/>
            <TextView
                android:id="@+id/visit_userstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hey! I'm using MCR infotech"
                android:layout_below="@+id/playbtn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/ccc2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cc2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#6D5B675C"/>
        <TextView
            android:id="@+id/q"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="q"
            android:textSize="25dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/a"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="a"
            android:textSize="25dp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cc3"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ccc2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/visit_sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" semister"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textStyle="bold" />
            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="1dp"
                android:layout_below="@+id/visit_sem"
                android:background="#6D5B675C"/>
            <TextView
                android:id="@+id/visit_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Course"
                android:layout_below="@+id/v1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textStyle="bold" />
            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="1dp"
                android:layout_below="@+id/visit_course"
                android:background="#6D5B675C"/>
            <TextView
                android:id="@+id/visit_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Session"
                android:layout_below="@+id/v2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/add_friend"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cc3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/s_bg"
        android:fontFamily="sans-serif-black"
        android:text="Add friend"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/remove_friend"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_friend"
        android:text="Remove"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/s_bg"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:visibility="invisible" />




</RelativeLayout>