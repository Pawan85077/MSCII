<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".upload_status">
    <LinearLayout

        android:id="@+id/layout_button1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@+id/layout_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/chooseImg1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="choose image 1"/>

        <Button
            android:id="@+id/uploadImg1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="upload image 1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_button1">
    </ImageView>
    <ImageView
        android:id="@+id/formal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_baseline_cloud_upload"/>

    <LinearLayout

        android:id="@+id/layout_button2"
        android:orientation="horizontal"
        android:layout_above="@+id/preview"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/chooseImg2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="choose image 2"/>

        <Button
            android:id="@+id/uploadImg2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="upload image 2" />

    </LinearLayout>
    <Button
        android:id="@+id/delstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Status"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delstatus"
        android:text="preview"/>
  <ProgressBar
      android:id="@+id/pbar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:background="@color/bg_spalsh"
      android:visibility="invisible"/>

</RelativeLayout>