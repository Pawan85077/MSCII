<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/custom_group_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/guest2"
        android:layout_alignParentStart="true"
        app:civ_border="true"
        app:civ_border_color="@color/colorAccent"/>
    <TextView
        android:id="@+id/custom_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/custom_group_image"
        android:text="Group Title"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/custom_group_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_group_title"
        android:text="Group description"
        android:layout_toRightOf="@+id/custom_group_image"
        android:textSize="20sp"/>

</RelativeLayout>