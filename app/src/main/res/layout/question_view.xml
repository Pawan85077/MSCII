<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ql"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/question_asker_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:cropToPadding="true"
                android:src="@drawable/main_stud"
                app:civ_border="false" />

            <!--            <Button-->
            <!--                android:id="@+id/name"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="33dp"-->
            <!--                android:background="@drawable/s_bg"-->
            <!--                android:fontFamily="monospace"-->
            <!--                android:text="name"-->
            <!--                android:textAllCaps="false" />-->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:text="name"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_90"
                android:textSize="20dp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/threeDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/tranparent"
                    android:src="@drawable/ic_baseline_more_vert_24" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Question category"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_90"
                android:textSize="16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="subject" />

            <!--            <Button-->
            <!--                android:id="@+id/sub"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="33dp"-->
            <!--                android:layout_marginLeft="38dp"-->
            <!--                android:background="@drawable/s_bg"-->
            <!--                android:fontFamily="monospace"-->
            <!--                android:text="subject"-->
            <!--                android:textAllCaps="false" />-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="45dp">

            <TextView
                android:id="@+id/AllQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:autoLink="all"
                android:cursorVisible="true"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:text="Questions Body"
                android:textSize="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/blue_grey_600"
                android:textColorHighlight="@color/blue_100"
                android:textColorLink="@color/blue_400"
                android:textCursorDrawable="@color/black"
                android:textIsSelectable="true" />


            <ImageButton
                android:id="@+id/qreport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_baseline_error_24"
                android:visibility="invisible" />

            <!--            android:visibility="invisible"-->
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_10"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:drawableRight="@drawable/ic_dropdown"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/blue_grey_50"
            android:padding="3dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/Answerer_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:cropToPadding="true"
                android:src="@drawable/main_stud"
                app:civ_border="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/tranparent"
                    android:text=" View "
                    android:textColor="@color/blue_900"
                    android:textSize="13sp" />

                <WebView
                    android:id="@+id/Answer2ques"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:visibility="invisible"
                    tools:ignore="WebViewLayout"
                    android:backgroundTint="@color/blue_grey_50"/>
            </LinearLayout>


            <!-- <TextView
                 android:id="@+id/Answer2ques"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="serif"
                 android:paddingStart="10dp"
                 android:textColor="#D1673AB7"
                 android:textSize="15sp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/flagBtn"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@drawable/s_bg"
                android:fontFamily="monospace"
                android:text="Answer this"
                android:textAllCaps="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp">
                <!--        <Button-->
                <!--            android:id="@+id/tup"-->
                <!--            android:layout_width="30dp"-->
                <!--            android:layout_height="30dp"-->
                <!--            android:layout_marginLeft="20dp"-->
                <!--            android:background="@drawable/ic_baseline_favorite_border_24"/>-->
                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/tup"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    app:allow_random_color="false"
                    app:big_shine_color="@color/badge_background_color"
                    app:btn_color="@color/grey_40"
                    app:btn_fill_color="#FFC107"
                    app:click_animation_duration="200"
                    app:enable_flashing="true"
                    app:shine_animation_duration="1500"
                    app:shine_count="8"
                    app:shine_distance_multiple="2"
                    app:shine_turn_angle="20"
                    app:siShape="@raw/star"
                    app:small_shine_color="@color/bg_spalsh"
                    app:small_shine_offset_angle="20" />

                <TextView
                    android:id="@+id/countLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:visibility="invisible" />
            </LinearLayout>

            <Button
                android:id="@+id/editAns"
                android:layout_width="50dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/s_bg"
                android:fontFamily="monospace"
                android:text="edit"
                android:textAllCaps="false"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <ImageButton
                    android:id="@+id/showReportStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_error_24"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/countreports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>